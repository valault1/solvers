{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "src/*": ["./src/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["./node_modules/**/*", "./dist", "./scripts", "./python", "./projects", "./backend"]
}
